export JO_DOMAIN=jomow.com.br
export JO_MODELO=modelo/produto.xml

mkdir -p $JO_DOMAIN/public/js

xsltproc --stringparam domain $JO_DOMAIN node-package-json.xslt $JO_MODELO > $JO_DOMAIN/package.json
xsltproc --stringparam domain $JO_DOMAIN node-app.xslt $JO_MODELO > $JO_DOMAIN/app.js
xsltproc --stringparam domain $JO_DOMAIN node-config.xslt $JO_MODELO > $JO_DOMAIN/config.js
xsltproc --stringparam domain $JO_DOMAIN node-resource.xslt $JO_MODELO > $JO_DOMAIN/public/js/resource.js
xsltproc --stringparam domain $JO_DOMAIN node-controller.xslt $JO_MODELO > $JO_DOMAIN/public/js/controller.js
xsltproc --stringparam domain $JO_DOMAIN node-router.xslt $JO_MODELO > $JO_DOMAIN/public/js/router.js

